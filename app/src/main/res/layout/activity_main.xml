<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jipouille.usefullviews.MainActivity">

    <com.jipouille.usefullviews.views.TextViewPlus xmlns:foo="http://schemas.android.com/apk/res-auto"
        android:id="@+id/textviewplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        foo:customFont="bariol_regular-webfont.ttf"
        android:textSize="20dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewplus"
        android:text="Hello World!"
        android:textSize="20dp"/>

    <com.jipouille.usefullviews.views.GroupRadioPlus
        xmlns:foo="http://schemas.android.com/apk/res-auto"
        android:id="@+id/telinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginTop="70dp"
        android:layout_below="@id/textviewplus"
        foo:maxRowElements="3"
        foo:customFont="bariol_regular-webfont.ttf"
        foo:underlineColor="@android:color/holo_orange_light"
        foo:underlineBackgroundColor="@android:color/white"/>

</RelativeLayout>
